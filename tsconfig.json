{
	"compilerOptions": {
		"target": "ES6", // 컴파일된 코드가 ES6 버전으로 변환
		"lib": ["ES6", "DOM", "DOM.Iterable"],
		"module": "ESNext", // 모듈 시스템은 최신 ES 모듈 방식
		"strict": true, // 엄격한 타입 검사 활성화 (권장)
		"esModuleInterop": true, // CommonJS 모듈과의 호환성
		"skipLibCheck": true, // 라이브러리 타입 검사 생략 (빌드 속도 향상)
		"forceConsistentCasingInFileNames": true, // 파일명 대소문자 엄격하게 체크
		"moduleResolution": "node", // Node.js 방식의 모듈 해석
		"jsx": "react-jsx", // React JSX 문법을 사용하도록 설정
		"baseUrl": "src",
		"paths": {
			"@icons/*": ["assets/icons/*"],
			"@images/*": ["assets/images/*"],
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"],
			"@styles/*": ["styles/*"],
			"@scss/*": ["styles/scss/*"],
			"@hooks/*": ["hooks/*"],
			"@utils/*": ["utils/*"],
			"@store/*": ["store/*"]
		},
		"allowSyntheticDefaultImports": true, // import 구문을 좀 더 유연하게
		"noImplicitAny": true, // 명시되지 않은 any 타입 경고
		"noFallthroughCasesInSwitch": true, // switch 문에서 case가 자동으로 넘어가지 않게 설정.
		"useUnknownInCatchVariables": false // catch 구문에 대한 타입을 명시적으로 설정
	},
	"include": ["src", "global.d.ts"]
}
